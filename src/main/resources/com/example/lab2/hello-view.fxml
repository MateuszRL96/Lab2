<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.RadioMenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="600.0" prefWidth="800.0" spacing="20.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.lab2.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <MenuBar>
      <menus>
          <Menu mnemonicParsing="false" text="File">
              <items>
                  <MenuItem mnemonicParsing="false" text="Nowy" />
                  <RadioMenuItem mnemonicParsing="false" text="1" />
                  <RadioMenuItem mnemonicParsing="false" text="2" />
                  <SeparatorMenuItem mnemonicParsing="false" />
                  <MenuItem mnemonicParsing="false" text="Unspecified Action" />
              </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Edit">
              <items>
                  <MenuItem mnemonicParsing="false" text="Delete" />
              </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
              <items>
                  <MenuItem mnemonicParsing="false" text="About" />
              </items>
          </Menu>
      </menus>
        <padding>
          <Insets left="20.0" right="20.0" />
        </padding>
    </MenuBar>
    <HBox prefHeight="100.0" prefWidth="200.0">
        <VBox prefHeight="200.0" prefWidth="200.0">
            <RadioButton fx:id="nieb_info" mnemonicParsing="false" text="Niebieski">
                <padding>
                    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                </padding>
            </RadioButton>
            <RadioButton fx:id="ziel_info" mnemonicParsing="false" text="Zielony">
                <padding>
                    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                </padding>
            </RadioButton>
            <RadioButton fx:id="czerw_info" mnemonicParsing="false" text="Czerwony">
                <padding>
                    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                </padding>
            </RadioButton>
        </VBox>
        <VBox prefHeight="200.0" prefWidth="100.0">
            <RadioButton fx:id="button1" mnemonicParsing="false" text="1">
                <padding>
                    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                </padding>
            </RadioButton>
            <RadioButton fx:id="button2" mnemonicParsing="false" text="2">
                <padding>
                    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                </padding>
            </RadioButton>
            <RadioButton fx:id="button3" mnemonicParsing="false" text="3">
                <padding>
                    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                </padding>
            </RadioButton>
        </VBox>
        <VBox prefHeight="200.0" prefWidth="100.0">
            <CheckBox mnemonicParsing="false" text="CheckBox">
                <padding>
                    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                </padding>
            </CheckBox>
            <CheckBox mnemonicParsing="false" text="CheckBox">
                <padding>
                    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                </padding>
            </CheckBox>
            <CheckBox mnemonicParsing="false" text="CheckBox">
                <padding>
                    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                </padding>
            </CheckBox>
        </VBox>
    </HBox>
    <TabPane prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE">
      <tabs>
          <Tab text="Untitled Tab 1">
              <content>
                  <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                      <VBox prefHeight="200.0" prefWidth="100.0">
                          <RadioButton mnemonicParsing="false" text="1">
                              <padding>
                                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                              </padding>
                          </RadioButton>
                          <RadioButton mnemonicParsing="false" text="2">
                              <padding>
                                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                              </padding>
                          </RadioButton>
                          <RadioButton mnemonicParsing="false" text="3">
                              <padding>
                                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                              </padding>
                          </RadioButton>
                      </VBox>
                      <ImageView fx:id="obrazek" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
                  </AnchorPane>
              </content>
          </Tab>
          <Tab text="Untitled Tab 2">
              <content>
                  <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
              </content>
          </Tab>
      </tabs>
    </TabPane>
</VBox>
